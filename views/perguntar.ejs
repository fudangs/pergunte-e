<%- include('partials/header.ejs'); %>
<body>
    <%- include('partials/navbar.ejs'); %>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h3 style="text-align: center;">Realizar pergunta</h3>
            </div>
            <div class="card-body">
                <form method="POST" action="/criarPergunta">
                    <div class="row">
                        <div class="form-group col-12">
                            <label for="iTituloPergunta">Título da pergunta</label>
                            <input type="text" placeholder="Título" name="iTituloPergunta" id="iTituloPergunta" class="form-control">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-12">
                            <label for="txtDesc">Descrição</label>
                            <textarea name="txtDesc" id="txtDesc" placeholder="Descrição" class="form-control" style='resize:vertical; min-height: 80px;'></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-12">
                            <button type='submit' class="btn btn-success btn-block">Perguntar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
<%- include('partials/footer.ejs'); %>